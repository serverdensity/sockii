{
    "listen": {
        "host": "127.0.0.1",
        "port": 8089
    },
    "timeout": 90000,
    "plugins": [
        "mongosessions"
    ],
    "aclAllowBaseDomain": "myapp.dev",
    "checkXRequestedWith": false,
    "basePath": "/svc",
    "httpProxy": {
        "silent": false,
        "xfwd": true,
        "changeOrigin": true
    },
    "routes": {
        "/svc/alerts": "alerts.myapp.dev",
        "/svc/users": "users.myapp.dev"
    },
    "wsMaps": {
        "notifications": "ws://notifications.myapp.dev:8090/websockets/"
    },
    "logResets": false,
    "logger": {
        "transports": [
        {
            "transport": "File",
            "filename": "./myapp.log",
            "json": false,
            "maxsize": 1048576,
            "maxFiles": 1
        }
        ]
    },
    "socket.io": {
        "polling duration": 10,
        "browser client": false,
        "match origin protocol": true,
        "path": "/svc/socket.io"
    },
    "mongosessions": {
        "required": true
    }
}
