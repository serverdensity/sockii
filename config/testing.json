{
    "listen": {
        "host": "127.0.0.1",
        "port": 8079
    },
    "timeout": 90000,
    "plugins": [
        "mongosessions"
    ],
    "basePath": "/svc",
    "httpProxy": {
        "silent": false,
        "xfwd": true,
        "changeOrigin": true
    },
    "routes": {
        "/svc/monkeys": "monkeys.sockii.dev:8888",
        "/svc/inventory": "inventory.sockii.dev",
        "/svc/users": "users.sockii.dev"
    },
    "wsMaps": {
        "wstest": "ws://localhost:8095/"
    },
    "logResets": true,
    "logger": {
        "transports": [
        {
            "transport": "File",
            "filename": "./tests.log",
            "json": false,
            "maxsize": 1048576,
            "maxFiles": 1
        }
        ]
    },
    "mongosessions": {
        "required": true
    }
}
